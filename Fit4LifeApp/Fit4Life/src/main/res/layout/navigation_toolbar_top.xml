<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#3DB4B8"
              android:paddingTop="5dp"
              android:paddingBottom="5dp">

    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_back"
            android:layout_alignParentLeft="true"
            android:onClick="navigateBack"
            android:layout_marginLeft="10dp"

            android:background="@drawable/action_back" />

    <TextView
        android:id="@+id/navigation_toolbar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#E8E8E8"
        android:paddingTop="5dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_centerHorizontal="true" />

    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_home"
            android:layout_alignParentRight="true"
            android:onClick="navigateHome"
            android:layout_marginRight="10dp"
            android:background="@drawable/action_settings" />


</RelativeLayout>